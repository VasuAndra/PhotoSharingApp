@model proiect.Models.Category
@{
    ViewBag.Title = "Edit category";
}
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm(actionName: "Edit", controllerName: "Category"))
{
    @Html.Hidden("CategoryId", Model.CategoryId)

    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    @Html.Label("CategoryName", "Category name")
    <br />
    @Html.Editor("CategoryName")
    @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger" })
    <br /><br />

    <button class="btn btn-success" type="submit">Modify category</button>
}